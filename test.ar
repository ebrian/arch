// header
out '*************************************\n'
out 'Arch - Lexical Analysis & Programming\n'
out '*************************************\n'

// test assignments
var name1 = 'brian'
var name2 = 'kevin'
var name3 = 'nate'
var name4 = 'brody'

// test outputs
out 'test outputs:\n'
out name1
out '\n'
out name2
out '\n'
out name3
out '\n'
out name4
out '\n\n'

// test concatentation
out 'test concatentation:\n'
out name1 ~ name2 ~ name3 ~ name4
out '\n\n'

// test variable assignment to variable
out 'test variable assignment from variable and output:\n'
var name_combined = name1 ~ ' combined with ' ~ name2
out name_combined
out '\n\n'

if (name1 == 'brian') {
    out 'the name is brian\n'

    // nested if
    if (name2 != name3) {
        out 'name2 does not equal name3\n'

        // second nested if
        if (name3 != 'brody') {
            out 'name3 is not brody\n'
        }
    }
}

out 'after if\n\n\n'

if (name4 == 'brody') {
    out 'yes\n'
}